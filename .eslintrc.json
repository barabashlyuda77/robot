{
  "extends": "airbnb-base",
  "env": {
      "es6": true,
      "node": true,
      "mocha": true
  },
  "globals": {
      "sinon": true,
      "proxyquire": true,
      "expect": true
  },
  "rules": {
        "no-param-reassign": ["error", { "props": false }],
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "no-console": "off",
        "max-len": "off"
    }
}
